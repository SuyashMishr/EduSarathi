{
  "name": "edusarathi",
  "version": "1.0.0",
  "description": "AI-powered educational platform for curriculum generation, quiz creation, and assessment",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
